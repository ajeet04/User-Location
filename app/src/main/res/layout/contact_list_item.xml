<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:src="@drawable/loc"
            app:civ_border_color="#CFD0D1"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Alber Jhon"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/mail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="113dp"
            app:srcCompat="@drawable/call" />

        <TextView
            android:id="@+id/number"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/imageView2"
            android:paddingLeft="10dp"
            android:text="9795624473"
            android:textColor=" #c4c4b5"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignStart="@+id/name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            app:srcCompat="@drawable/email" />

        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imageView3"
            android:paddingLeft="10dp"
            android:text="ajeetkr35@gmail.com"
            android:textColor=" #c4c4b5"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/imageView3"
            android:layout_alignStart="@+id/name"
            android:layout_marginStart="0dp"
            app:srcCompat="@drawable/bdy" />

        <TextView
            android:id="@+id/dobb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_alignEnd="@+id/number"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/imageView4"
            android:paddingLeft="10dp"
            android:text="12/12/2018"
            android:textColor=" #c4c4b5"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.v7.widget.CardView>